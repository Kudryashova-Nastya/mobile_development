<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.hw6.fragments.list.ListFragment"
        android:label="Список"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFragment_to_relationshipFragment"
            app:destination="@id/relationshipFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.hw6.fragments.add.AddFragment"
        android:label="Создание"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/relationshipFragment"
        android:name="com.example.hw6.fragments.relationship.RelationshipFragment"
        android:label="Семейное древо"
        tools:layout="@layout/fragment_relationship" >
        <argument
            android:name="currentNode"
            app:argType="com.example.hw6.model.nodes.room.entities.NodeDbEntity" />
        <action
            android:id="@+id/action_relationshipFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>